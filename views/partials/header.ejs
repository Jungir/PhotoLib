<!DOCTYPE html>
<html>
    <head>
        <title>Photo Lib</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <script src="https://kit.fontawesome.com/542c23924c.js"></script>
        <link rel="stylesheet" href="/styles/main.css">
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/photos"><i class="fas fa-camera fa-1x"> </i> Photo Lib</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <%if(!currentUser){%>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <%}else{%>
                        <li><a>Signed in as <strong class="text-capitalize"><%= currentUser.username%></strong></a> </li>
                        <li><a href="/logout">Logout</a></li>
                    <%}%>
                </ul>
            </div>
        </div>
</nav>

<div class="container">
    <%if(error && error.length > 0) {%>
    <div class="alert alert-danger">
        <%= error%>
    </div>
    <%}%>

    <%if(success && success.length > 0) {%>
        <div class="alert alert-success">
            <%= success%>
        </div>
    <%}%>
</div>